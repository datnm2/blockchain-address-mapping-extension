{
  "manifest_version": 3,
  "name": "Wallet Name Replacer",
  "version": "1.0.0",
  "description": "Replace wallet addresses with custom names on blockchain explorers",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.etherscan.io/*",
    "*://*.arbiscan.io/*",
    "*://*.bscscan.com/*",
    "*://*.polygonscan.com/*",
    "*://*.optimistic.etherscan.io/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Wallet Name Replacer"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.etherscan.io/*",
        "*://*.arbiscan.io/*",
        "*://*.bscscan.com/*",
        "*://*.polygonscan.com/*",
        "*://*.optimistic.etherscan.io/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}